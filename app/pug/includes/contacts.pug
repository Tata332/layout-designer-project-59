mixin avatar(url, size = "50px")
  img.rounded-circle.ms-3.me-4(src= url, alt="avatar" width= size height= size)

mixin search
  form(action="#") 
    input.shadow-none.search.form-control.p-4(type="text" placeholder="Поиск по контактам")

mixin contact(contactInfo)
  a.d-flex.align-items-center(href"#")
    +avatar(contactInfo.avatar)
    .py-5
      p.text-dark.fw-bold=contactInfo.name
      p.text-secondary.smail=contactInfo.status

h2.fw-bold.mb-4.text-dark Контакты
+search("Поиск по контактам")
each contactInfos, alphabet in contacts
  p.mb-3.mt-5= alphabet
  each contactInfo in contactInfos
    +contact(contactInfo)