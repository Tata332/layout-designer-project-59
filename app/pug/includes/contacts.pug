mixin avatar(url, size = "50px")
  img.rounded-circle.ms-3.me-4(src= url, alt="avatar" width= size height= size)

mixin contact(contacti)
  a.contact.d-flex.align-items-center.text-decoration-none.mb-3.shadow(href="#")
    +avatar(contacti.avatar)
    .py-4
        p.text-dark.fw-bold.mb-0= contacti.name
        p.text-secondary.small.mb-0= contacti.status

mixin search
  form.mb-5(role="search" action="#" method="post")
    input.shadow-none.search.form-control.p-4(type="search" placeholder="Поиск по контактам")

h2.fw-bold.mb-4.text-dark Контакты
+search("Поиск по контактам")
each contactis, letter in contacts
  p.mb-3.mt-5.text-muted= letter
  each contacti in contactis
    +contact(contacti)