header.bg-primary.p-3.d-flex.justify-content-between
    a.logo(href="index.html")
        img.hexlet-logo(src="images/icons/logo.svg", alt="hexlet-logo")
    nav
        ul.nav.justify-content-end(role="tablist")
            li.nav-item
                a.nav-link.active(href="#contacts" id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts" aria-controls="contacts" role="tab" aria-selected="true")
                    img.tab-logo.me-2(src="images/icons/people.svg" alt="logo" width="25" height="25")
                    span.d-none.d-xl-inline.small.text-light Контакты
            li.nav-item
                a.nav-link(href="#chats" id="chats-tab" data-bs-toggle="tab" data-bs-target="#chats" aria-controls="chats" role="tab" aria-selected="false")
                    img.tab-logo.me-2(src="images/icons/chat.svg" alt="logo" width="25" height="25")
                    span.d-none.d-xl-inline.small.text-light Сообщения
            li.nav-item
                a.nav-link.align-items-center(href="#profile" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" aria-controls="profile" role="tab" aria-selected="false")
                    img.tab-logo.me-2(src="images/icons/person.svg" alt="logo" width="25" height="25")
                    span.d-none.d-xl-inline.small.text-light Профиль